@{
    Page.Title = "部门信息修改";
    Layout = "~/_MainLayout.cshtml";
}
<form action="~/Dept/Modify" method="post" class="form">
    <input type="hidden" name="Dept.DeptId" value="@Model.Dept.DeptId"/>
    <div class="row">
        <div class="col-xs-4"></div>
        <div class="col-xs-4">
            <h1 class="text-center text-info">部门信息修改</h1>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">部门名称</span>
                    <input type="text" class="form-control" 
                        name="Dept.DeptName" value="@Model.Dept.DeptName"/>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">部门名称</span>
                    <input type="text" class="form-control" 
                        name="Dept.DeptInfo" value="@Model.Dept.DeptInfo"/>
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="保存部门" class="btn btn-success" />
                <input type="reset" value="重填信息" class="btn btn-info" />
                <a class="btn btn-primary" href="~/Dept/">返回</a>
            </div>
            <div class="text-danger text-center">
                <span>@Model.Message</span>
            </div>
        </div>
        <div class="col-xs-4"></div>
    </div>
</form>

