@{
    Page.Title = "员工信息修改";
    Layout = "~/_MainLayout.cshtml";
}

@section JavaScript{
    <script type="text/javascript">
        $(function () {
            var deptId = "@Model.Employee.DeptId";
            $("#deptId").val(deptId);

            var sex = "@Model.Employee.Sex";
            if ("m" === sex) {
                $("#sexM").prop("checked", true);
            } else {
                $("#sexF").prop("checked", true);
            }
        });
    </script>
}


<form class="form" action="~/Employee/Modify" method="post">
    <input type="hidden" name="Employee.Eid" value="@Model.Employee.Eid"/>
    <div class="row">
        <div class="col-xs-4"></div>
        <div class="col-xs-4">
            <h1 class="text-center">员工信息修改</h1>
            <div class="form-group">
                <input type="text" class="form-control" name="Employee.Ename"
                    placeholder="请输入员工名称" value="@Model.Employee.Ename"/>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <label class="input-group-addon">请选择部门：</label>
                    <select id="deptId" name="Employee.DeptId" class="form-control">
                        @foreach (var dept in Model.DeptList)
                        {
                            <option value="@dept.DeptId">@dept.DeptName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="radio-inline">性别：</label>
                <label class="radio-inline">
                    <input type="radio" name="Employee.Sex" value="m" id="sexM">男
                </label>
                <label class="radio-inline">
                    <input type="radio" name="Employee.Sex" value="f" id="sexF">女
                </label>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="Employee.Salary"
                    placeholder="请输入员工工资" value="@Model.Employee.Salary"/>
            </div>
            <div class="text-center">
                <input type="submit" value="保存员工" class="btn btn-success" />
                <input type="reset" value="重填信息" class="btn btn-info" />
                <a class="btn btn-primary" href="~/Employee/">返回</a>
            </div>
            <div class="text-danger text-center">
                <span>@Model.Message</span>
            </div>
        </div>
        <div class="col-xs-4"></div>
    </div>
</form>
