@{
    Page.Title = "用户注册";
    Layout = "~/_UserLayout.cshtml";
}
<div class="row">
    <div class="col-sm-4 col-xs-hidden"></div>
    <div class="col-sm-4 col-xs-12">
        <h1 class="text-center">用户注册</h1>
        <form action="~/User/Reg" method="post">
            <div class="form-group">
                <input type="text" name="User.Username"
                    value="@Model.User.Username"
                    class="form-control"
                    placeholder="用户名"/>
            </div>
            <div class="form-group">
                <input type="text" name="User.Password"
                    value="@Model.User.Password" 
                    class="form-control"
                    placeholder="密码"/>
            </div>
            <div class="form-group">
                <input type="password" name="User.Nickname"
                    value="@Model.User.Nickname" 
                    class="form-control"
                    placeholder="昵称"/>
            </div>
            <div class="text-center">
                <input type="submit" value="注册" class="btn btn-info" />
                <input type="reset" value="重填" class="btn btn-info" />
                <a href="~/Default/" class="btn btn-info">返回</a>
            </div>
            <div class="text-center text-danger">
                @Model.Message
            </div>
        </form>
    </div>
    <div class="col-sm-4 col-xs-hidden"></div>
</div>
