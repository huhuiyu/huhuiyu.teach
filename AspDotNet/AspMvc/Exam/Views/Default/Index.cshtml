@{
    Page.Title = "商品管理系统";
    Layout = "~/_MainLayout.cshtml";
}
<!-- @ViewBag.Message -->
<div class="row">
    <div class="col-sm-hidden col-md-4"></div>
    <div class="col-sm-12 col-md-4">
        <form action="~/Default/Login" method="post">
            <div class="panel panel-primary">
                <div class="panel-heading text-center"><h4>用户登录</h4></div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="input-group">
                            <label class="input-group-addon">用户名</label>
                            <input type="text" name="User.Username"
                                class="form-control"
                                placeholder="请输入用户名" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <label class="input-group-addon">密&nbsp;&nbsp;&nbsp;码</label>
                            <input type="password" name="User.Password"
                                class="form-control"
                                placeholder="请输入密码" />
                        </div>
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <input type="submit" value="登录" class="btn btn-primary" />
                    <input type="reset" value="重填" class="btn btn-info" />
                </div>
            </div>
        </form>
        <div class="text-center text-danger h3">@Model.Message</div>
    </div>
    <div class="col-sm-hidden col-md-4"></div>
</div>
